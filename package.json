{
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "bugs": "https://github.com/unifiedjs/npm-tools/issues",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "description": "npm tools for unified",
  "dependencies": {
    "@octokit/graphql": "^8.0.0",
    "chalk": "^5.0.0",
    "dlv": "^1.0.0",
    "p-series": "^3.0.0",
    "trough": "^2.0.0",
    "undici": "^6.0.0",
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "@types/dlv": "^1.0.0",
    "@types/node": "^22.0.0",
    "@types/pacote": "^11.0.0",
    "pacote": "^18.0.0",
    "prettier": "^3.0.0",
    "remark-cli": "^12.0.0",
    "remark-preset-wooorm": "^10.0.0",
    "type-coverage": "^2.0.0",
    "type-fest": "^4.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.59.0"
  },
  "files": [
    "config/",
    "lib/",
    "index.js"
  ],
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "name": "npm-tools",
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "private": true,
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm"
    ]
  },
  "repository": "unifiedjs/npm-tools",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "crawl": "node --conditions developments script/crawl.js",
    "format": "remark --frail --quiet --output -- . && prettier --log-level warn --write -- . && xo --fix",
    "start": "node --conditions developments index.js",
    "test": "npm run build && npm run crawl && npm run format"
  },
  "typeCoverage": {
    "atLeast": 100,
    "strict": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "no-await-in-loop": "off"
    }
  }
}
